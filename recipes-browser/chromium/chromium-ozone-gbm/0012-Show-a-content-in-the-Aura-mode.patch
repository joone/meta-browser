From: Joone Hur <joone.hur@intel.com>
Date: Tue, 14 Aug 2018 00:22:40 +0000
Subject: [PATCH 12/14] Show a content in the Aura mode

---
 content/shell/browser/shell_aura.cc | 11 ++++++++++-
 1 file changed, 10 insertions(+), 1 deletion(-)

diff --git a/content/shell/browser/shell_aura.cc b/content/shell/browser/shell_aura.cc
index e2dd40808b4a..f34b26e3f6b9 100644
--- a/content/shell/browser/shell_aura.cc
+++ b/content/shell/browser/shell_aura.cc
@@ -48,7 +48,16 @@ void Shell::PlatformCreateWindow(int width, int height) {
   window_ = platform_->host()->window();
 
   aura::Window* content = web_contents_->GetNativeView();
-  content->SetBounds(gfx::Rect(0, 0, width, height));
+  base::CommandLine* command_line = base::CommandLine::ForCurrentProcess();
+#if defined(DISPLAY_CONFIGURATION)
+  if (command_line->HasSwitch("run-web-tests"))
+    content->SetBounds(gfx::Rect(0, 0, 800, 600));
+  else
+    content->SetBounds(gfx::Rect(0, 0, width, height));
+#else
+  content->SetBounds(gfx::Rect(0 , 0, width, height));
+#endif
+  PlatformSetContents();
 }
 
 void Shell::PlatformSetContents() {
